# This file generates the Perl modules and Makefile.PL from the files
# in ./tmpl/.

PNGPM=lib/Image/PNG.pm

TOUT=lib/Image/PNG.pm lib/Image/PNG/Container.pm Makefile.PL
TIN=    build/LibpngInfo.pm \
	tmpl/author \
	tmpl/config \
	tmpl/PNG.t.tmpl \
	tmpl/PNG.pm.tmpl \
	tmpl/Container.pm.tmpl \
	tmpl/Util.pm.tmpl \
	tmpl/Makefile.PL.tmpl \
	tmpl/png_doc \
	tmpl/pngspec \
	tmpl/config \
	tmpl/version \
	tmpl/other_modules \
	build/make-files.pl

all:	$(TOUT)

start:	$(TOUT) Makefile

Makefile:	Makefile.PL
	perl Makefile.PL

$(TOUT): $(TIN)
	build/make-files.pl

clean:
	if [ -f Makefile ]; then make clean; fi

# Local Variables:
# mode: makefile
# End:
